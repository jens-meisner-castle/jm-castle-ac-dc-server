{
  "name": "jm-castle-ac-dc-server",
  "version": "0.14.3",
  "module": "./build",
  "files": [
    "build",
    "src"
  ],
  "exports": {
    "./build": {
      "types": "./build/index.d.ts",
      "import": "./build/index.js"
    },
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.js"
    }
  },
  "type": "module",
  "private": false,
  "scripts": {
    "clean": "del-cli build",
    "prebuild": "npm run clean && eslint \"./src/**\"",
    "build": "tsc --project tsconfig.json",
    "start": "node ./build/start.mjs",
    "dev": "nodemon --ext '*.mts' -x \"npm run build && npm run start \"",
    "dev:serve": "cross-env NODE_ENV=development ts-node-dev --inspect=9229 --nolazy --respawn ./src -r ts-node/register src/."
  },
  "peerDependencies": {
    "jm-castle-ac-dc-calc": "^0.x",
    "jm-castle-ac-dc-types": "^0.x",
    "jm-castle-mariadb": "^0.x",
    "jm-castle-types": "^0.x"
  },
  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.2",
    "http-errors": "^2.0.0",
    "luxon": "^3.3.0",
    "mariadb": "^3.0.1",
    "mathjs": "^11.2.1",
    "mqtt": "^4.3.7",
    "node-fetch": "^3.2.10",
    "nodemailer": "^6.8.0",
    "typescript": "^4.8.3",
    "ws": "^8.10.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "4.17.13",
    "@types/http-errors": "1.8.2",
    "@types/luxon": "^3.0.1",
    "@types/nodemailer": "^6.4.6",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "cross-env": "^7.0.3",
    "del-cli": "^5.0.0",
    "eslint": "^8.23.1",
    "jm-castle-ac-dc-calc": "^0.10.0",
    "jm-castle-ac-dc-types": "^0.14.1",
    "jm-castle-mariadb": "^0.3.0",
    "jm-castle-types": "^0.4.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0"
  }
}
